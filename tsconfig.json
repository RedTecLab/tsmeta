{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2018", "esnext.asynciterable"]
  },
  "include": [
    "__test__/**/*",
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
}
