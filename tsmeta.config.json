{
  "basePackage": "package.json",
  "metaConfig": {
    "create": true,
    "outputPath": "schema",
    "outputFilename": "tsmeta.tsmeta.schema.json",
    "compilerOptions": "tsconfig.build.json"
  },
  "sigmaConfig": {
    "create": true,
    "outputPath": "schema",
    "outputFilename": "sigmaData.tsmeta.json",
    "link": {
      "packages": true,
      "classes": true,
      "interfaces": true,
      "methods": false,
      "properties": false
    }
  },
  "oasConfig": {
    "create": false,
    "outputPath": "schema",
    "annotationsMap": {
      "Controller": "Controller",
      "Model": "Model",
      "GetRequest": "GetRequest",
      "PostRequest": "PostRequest",
      "PutRequest": "PutRequest",
      "PatchRequest": "PatchRequest",
      "DeleteRequest": "DeleteRequest",
      "HeadRequest": "HeadRequest",
      "SuccessResponse": "SuccessResponse",
      "PathVariable": "PathVariable",
      "ReqParam": "ReqParam",
      "ReqBody": "ReqBody"
    }

  },
  "graphQLConfig": {
    "create": false,
    "outputPath": "schema"
  }
}
