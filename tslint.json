{
  "extends": "./node_modules/tslint-microsoft-contrib/tslint.json",
  "rules": {
    "align": true,
    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "ban": [
      true,
      { "name": "parseInt", "message": "tsstyle#type-coercion" },
      { "name": "parseFloat", "message": "tsstyle#type-coercion" },
      { "name": "Array", "message": "tsstyle#array-constructor" }
    ],
    "ban-types": [
      true,
      [ "Object", "Use {} instead." ],
      [ "String", "Use \"string\" instead." ],
      [ "Number", "Use \"number\" instead." ],
      [ "Boolean", "Use \"boolean\" instead." ]
    ],
    "comment-format": [
      true,
      "check-lowercase",
      { "ignore-words": [ "TODO" ] }
    ],
    "completed-docs": [
      true,
      "classes",
      "functions",
      "interfaces",
      "methods"
    ],
    "curly": false,
    "deprecation": true,
    "export-name": false,
    "import-name": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "max-classes-per-file": [
      true,
      1
    ],
    "max-file-line-count": [
      true,
      180
    ],
    "mocha-no-side-effect-code": false,
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-backbone-get-set-outside-model": false,
    "no-console": true,
    "no-duplicate-case": false,
    "no-implicit-dependencies": [
      true,
      [ "controller", "helper", "model", "src", "tsmeta" ]
    ],
    "no-import-side-effect": [
      true,
      { "ignore-module": "reflect-metadata" }
    ],
    "no-inferred-empty-object-type": true,
    "no-magic-numbers": true,
    "no-namespace": [
      true,
      "allow-declarations"
    ],
    "no-null-keyword": true,
    "no-parameter-reassignment": false,
    "no-parameter-properties": false,
    "no-relative-imports": false,
    "no-unnecessary-type-assertion": false,
    "no-stateless-class": false,
    "no-submodule-imports": [
      true,
      "controller",
      "helper",
      "model",
      "src"
    ],
    "no-switch-case-fall-through": true,
    "no-unbound-method": [
      true,
      "ignore-static"
    ],
    "no-unsafe-any": false,
    "no-var-self": false,
    "object-literal-shorthand": true,
    "object-literal-sort-keys": true,
    "only-arrow-functions": true,
    "prefer-switch": [
      true,
      { "min-cases": 2 }
    ],
    "prefer-type-cast": false,
    "quotemark": [
      true,
      "single",
      "avoid-template"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "strict-boolean-expressions": false,
    "valid-typeof": false,
    "variable-name": [
      true,
      "allow-leading-underscore"
    ]
  }
}
