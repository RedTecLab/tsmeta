{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "__mocks__/**/*",
    "__tests__/**/*"

  ]
}
